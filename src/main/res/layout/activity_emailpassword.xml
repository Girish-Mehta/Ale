<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_google_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:padding="50dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.cameo.root.ale.EmailPasswordActivity">




    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="15"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="19dp"
        android:id="@+id/pass" />

    <TextView
        android:text="@string/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:textColor="@color/white"
        android:id="@+id/sign_in"
        android:padding="10dp"
        android:layout_alignBottom="@+id/sign_up"
        android:layout_alignTop="@+id/sign_up"
        android:onClick="signIn"
        android:clickable="true"
        android:layout_alignEnd="@+id/pass" />

    <TextView
        android:text="@string/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:textColor="@color/white"
        android:onClick="createAccount"
        android:clickable="true"
        android:padding="10dp"
        android:layout_marginTop="36dp"
        android:id="@+id/sign_up"
        android:layout_below="@+id/pass"
        android:layout_alignStart="@+id/pass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="15"
        android:hint="Email ID"
        android:id="@+id/email"
        android:layout_below="@+id/status"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@id/sign_up"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:id="@+id/g_login"
        android:background="@color/colorDark">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal"
                android:id="@+id/google_signin"
                android:layout_marginRight="0dp"
                android:layout_below="@+id/sign_up"
                android:layout_alignStart="@+id/sign_up" />

        <TextView
                android:text="Sign In with Google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g_signin"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/google_signin"
                android:layout_toEndOf="@+id/google_signin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@id/g_login"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:id="@+id/f_login"
        android:background="@color/colorDark">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/twitterlogo"
            android:id="@+id/facebook_signin"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_alignStart="@+id/sign_up" />

        <TextView
            android:text="Sign In with Facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_signin"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/google_signin"
            android:layout_toEndOf="@+id/google_signin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@id/f_login"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:padding="5dp"
        android:id="@+id/t_login"
        android:background="@color/colorDark">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/facebooklogo"
            android:id="@+id/twitter_signin"
            android:layout_marginRight="0dp"
            android:layout_alignStart="@+id/sign_up" />

        <TextView
            android:text="Sign In with Twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t_signin"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/google_signin"
            android:layout_toEndOf="@+id/google_signin" />
    </LinearLayout>


    <TextView
        android:text="Forgot Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:id="@+id/forgot_pass"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Not Logged In Yet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
